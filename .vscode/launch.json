{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "OSX Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/miniRT",
      "args": ["assets/scenes/cylinder.rt"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [{ "name": "config", "value": "debug" }],
      "externalConsole": false,
      "MIMode": "lldb"
    },
    {
      "name": "(Linux) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/miniRT",
      "args": ["test.rt"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": ["assets/scenes/test.rt"],
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/miniRT",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {"text": "-gdb-set follow-fork-mode parent"}
      ]
    }
  ]
}